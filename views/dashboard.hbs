<div class="px-1 pt-5">
    <h1>Dashboard</h1>
    {{> accountcard}}
    
    <h3 class="text-lg font-medium">Recent Transactions</h3>
    <div class="space-y-2">
        {{#each transactions}}
            
                <div class="flex justify-between items-center bg-slate-50">
                    <div class="flex flex-col">
                        <p class="text-xl font-medium">{{this.name}}</p>
                        <p class="text-sm">{{formatdate this.date}}</p>
                    </div>
                    <p>{{this.amount}}</p>
                </div>
            
        {{/each}}
    </div>
</div>